<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/background1" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/company_name"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text1"
            android:contentDescription="@null"
            android:src="@drawable/banner" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_call_24px" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="37dp"
            android:layout_toEndOf="@id/image2"
            android:autoLink="phone"
            android:text="@string/contact_number"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="25dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_email_24px" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/image3"
            android:autoLink="email"
            android:text="@string/email"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image3"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="25dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_place_24px" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/image4"
            android:text="@string/address"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image4"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="25dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_access_time_24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/image5"
            android:text="@string/office_timing"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>